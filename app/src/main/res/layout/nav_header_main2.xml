<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/cattextcolour">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorPrimaryDark">


        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/banar1"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/shoppy_logo"
            app:view_shadowRadius="1dp"
            android:layout_gravity="center"
            app:view_shadowDx="1dp"
            app:view_shadowDy="0dp"
            app:view_borderWidth="0dp"
            app:view_borderColor="#cccccc"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginLeft="15dp"
            />

        <zw.co.vokers.vinceg.tasnat.utils.VinceTextView
            android:layout_weight="1"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textColor="@color/cattextcolour"
            android:textSize="15dp"
            android:text="TasNat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/myproducts1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/settingsmenu"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="@dimen/menucat_imgtopmargin"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:src="@drawable/map_markermenu"
                    />
                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="@dimen/menu_textpading"
                    android:letterSpacing="0.025"
                    android:layout_marginTop="@dimen/menu_layouttopmargin"
                    android:textColor="@color/cattextcolour"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>




            <LinearLayout
                android:id="@+id/ordersLinearMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="@dimen/menucat_imgtopmargin"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:src="@drawable/boxmenu"
                    />
                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Orders"
                    android:letterSpacing="0.025"
                    android:textSize="@dimen/menu_textpading"
                    android:textColor="@color/cattextcolour"
                    android:layout_marginTop="@dimen/menu_layouttopmargin"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginTop="@dimen/menucat_imgtopmargin"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:src="@drawable/visamenu"
                    />
                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cards"
                    android:textSize="@dimen/menu_textpading"
                    android:letterSpacing="0.025"
                    android:textColor="@color/cattextcolour"
                    android:layout_marginTop="@dimen/menu_layouttopmargin"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cattextcolour">



        <LinearLayout
            android:id="@+id/categoriesLayout"
            android:layout_marginTop="@dimen/menu_layouttopmargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/categorymenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cars By Brand"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/productsLayout"
            android:layout_marginTop="@dimen/menu_layouttopmargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/categorymenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Vehicles"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mywalletmenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Wallet"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/historymenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View History"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/groupmenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refer &amp; Earn"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/helpmenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help Center"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ratemenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate Us"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/menu_layoutpading">

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logoutmenu"
                />

            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/category_textcolour"
                android:textSize="@dimen/menu_text"
                android:layout_marginLeft="@dimen/menu_textpading"
                />
        </LinearLayout>





    </LinearLayout>

</LinearLayout>
