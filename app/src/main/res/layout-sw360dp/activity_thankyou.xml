<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    tools:context=".activities.ThankyouActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/othertoolbar"/>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rect"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Thanks for order!"
            android:textColor="@color/Tex"
            android:textSize="25dp" />

        <View

            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/dash_line" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/shoppy_logo" />

        <View

            android:layout_width="250dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/dash_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="05dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="1x"
                    android:textColor="@color/textSub"
                    android:textSize="20dp" />

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Apple iPad Air 2 (Space Grey, 64GB, WiFi + Cellular)"
                    android:textColor="@color/textSub"
                    android:textSize="18dp" />

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="25dp"
                    android:text="46,500 RS"
                    android:textColor="@color/textSub"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="3GB DDR3 RAM + 16 GB ROM"
                    android:textColor="@color/textSub"
                    android:textSize="10dp"
                    android:textStyle="italic" />

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:text="@string/shiping"
                    android:textColor="@color/textSub"
                    android:textSize="10dp"
                    android:textStyle="italic|bold" />


            </LinearLayout>

            <View

                android:layout_width="250dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/dash_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:orientation="horizontal"

                android:paddingTop="10dp">

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="TOTAL"
                    android:textColor="@color/textSub"
                    android:textSize="@dimen/text" />

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"

                    android:text="46,500 RS"
                    android:textColor="@color/purpler"
                    android:textSize="25dp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1"
        android:layout_alignStart="@+id/lin1"
        android:layout_alignLeft="@+id/lin1"
        android:layout_alignEnd="@+id/lin1"
        android:layout_alignRight="@+id/lin1"
        android:src="@drawable/line" />


</RelativeLayout>
