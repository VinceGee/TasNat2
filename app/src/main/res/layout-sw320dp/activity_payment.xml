<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity"
    android:background="#f2f3f4"
    >

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="56dp"
                >

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOTAL"
                    android:textSize="9dp"
                    android:textColor="@color/textSub"
                    android:gravity="center"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs"
                        android:textSize="@dimen/textsub"
                        android:textColor="@color/Tex"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        />

                    <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="566"
                        android:textSize="19dp"
                        android:textColor="@color/Tex"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        />


                </LinearLayout>

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INCLUSIVE OF ALL TAXES"
                    android:textSize="9dp"
                    android:textColor="@color/textSub"
                    android:gravity="center"

                    />



            </LinearLayout>

            <!--**********Apply coupon and gift wrap**********-->
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_below="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rect"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"


                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/paypal"

                        />
                    <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paypal"
                        android:textColor="@color/purpler"
                        android:textSize="@dimen/text"
                        android:gravity="center"
                        android:layout_marginTop="10dp"

                        />


                </LinearLayout>

                <View

                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colordevider"></View>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_gravity="bottom"

                    >

                    <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="550 Rs"
                        android:textColor="@color/textSub"
                        android:textSize="11dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        />


                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/wallet"

                        />

                    <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Wallet"
                        android:textColor="@color/purpler"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/text"
                        />

                </LinearLayout>

            </LinearLayout>


                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:background="@color/colordevider"></View>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    >
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:gravity="center"

                       android:paddingTop="23dp"
                        android:paddingBottom="23dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/paytm_logo"

                            />
                        <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Paytm"
                            android:textColor="@color/purpler"
                            android:textSize="@dimen/text"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />


                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        ></View>




                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:paddingTop="23dp"
                        android:paddingBottom="23dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/payu_logo"

                            />
                        <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay U Money"
                            android:textColor="@color/purpler"
                            android:textSize="@dimen/text"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            />


                    </LinearLayout>





                </LinearLayout>




            </LinearLayout>




    <!--**********add method**********-->
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/add"
            android:text="Add New Payment Method"
            android:textColor="@color/purpler"
            android:drawablePadding="12dp"
            android:textSize="@dimen/text"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            />
    </LinearLayout>
</LinearLayout>



    <!--**********Shipping**********-->
    <LinearLayout
        android:id="@+id/linear3"
       android:layout_below="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        >
    <!--*********SHIP TO***********-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHIP TO"
                android:textColor="@color/Tex"
                android:textSize="@dimen/text"
                android:layout_marginLeft="16dp"
                />

            <ImageView
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"
                android:gravity="right"
                />


        </LinearLayout>

        <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24-b Baker Street, Indiana Trail, Manjalpur, Gujarat, India, 390011 "
            android:textColor="@color/textSub"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/textsub"
            android:layout_marginLeft="16dp"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            />


    </LinearLayout>


</LinearLayout>



            <LinearLayout
                android:layout_below="@+id/linear3"
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="31dp"

                >

                <zw.co.vokers.vinceg.tasnat.utils.VokersRegularText
                    android:id="@+id/goToThankYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeorder"
                    android:textColor="@color/White"
                    android:textSize="@dimen/text"
                    android:background="@drawable/oneside_roundrect"
                    android:paddingLeft="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="25dp"
                    android:gravity="center"

                    android:layout_gravity="right"
                    />

            </LinearLayout>




        </RelativeLayout>
    </ScrollView>









</RelativeLayout>
